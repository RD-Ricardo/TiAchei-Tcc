@model Pet
@using TiAchei_Tcc.Enums

<form class="col-md-4" asp-action="Index" asp-controller="Registro">
    <h1 class="h3 mb-3 fw-normal">Registre seu Pet</h1>
        <div class="form-floating">
            <input asp-for="@Model.Nome" class="form-control" id="floatingInput" placeholder="n">
            <label for="floatingInput">Nome</label>
        </div>
         <div class="form-floating">
            <input asp-for="@Model.Foto" class="form-control" id="floatingPassword" placeholder="s">
            <label for="floatingPassword">Foto</label>
        </div>
         <div class="form-floating">
            <input asp-for="@Model.Perdido" >
        </div>
        <div>
            <select asp-for="@Model.Tipo" asp-items="Html.GetEnumSelectList<Tipo>()"></select>
        </div>
        <div class="form-floating">
            <input asp-for="@Model.Descricao" class="form-control" id="floatingPassword" placeholder="s">
            <label for="floatingPassword">Descrição</label>
        </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
</form>