@{
    ViewData["Title"] = "Register";
}
@model RegisterViewModel
<link rel="stylesheet" href="~/css/styleLogin.css" asp-append-version="true" />
 <div class="containner d-flex align-items-center justify-content-center" style="height: 80vh;">
        <div id="conteudo">
            <div id="box1">
                <img class="mt-5" src="~/img/radar-mobile-app.png" alt="">
                <h1>Ti Achei</h1><br/>
                <h2>Seja bem vindo!</h2><br/>
                <p class="fs-5">Fa√ßa o Login</p>
                <a class="bt" asp-action="Login" asp-controller="User">Entrar</a>
            </div>
            <div id="box2">
                <h1>Cadastrar</h1>
                <form asp-action="Register" asp-controller="User" method="post">
                    <div class="single-input">
                        <input asp-for="@Model.Nome" class="input" id="cpf" required>
                        <label for="Nome">Nome</label>
                    </div>
                    <div class="single-input">
                        <input asp-for="@Model.Email" class="input" id="cpf" required>
                        <label for="Email">Email</label>
                    </div>
                    <div class="single-input">
                        <input type="password" asp-for="@Model.Senha" class="input" id="telefone" required>
                        <label for="Senha">Senha</label>
                    </div>
                    <button type="submit" class="bt mb-5">Cadastrar-se</button>
                </form>
            </div>                
            </div>
        </div>
</div>