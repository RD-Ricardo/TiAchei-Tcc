@model LoginViewModel;
@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/styleLogin.css" asp-append-version="true" />
<div class="container p-5">
    <div class="row vh-70 align-items-center conteudo mt-2 border rounded shadow">
        <div class="col-md-4 box1">
           <div class="row d-flex align-items-center justify-content-center" style="height:600px;">
               <div class="col-12 d-flex flex-column align-items-center" >
                    <img src="~/img/radar-mobile-app.png" alt="" width="200">
                    <h2 class="mt-3" style="font-weight: bold;color:#363636;">Ti Achei</h2>
                    <h6>NÃ£o tem conta, crie uma.</h6>
                    <a asp-action="Cadastrar" asp-controller="User" class="btn bt mt-1" style="width:120px;">Cadastre-se</a>
                </div>
           </div>
        </div>
        <div class="col-md-8">
            <h2 class="text-center  mt-1 mb-5" style="font-weight: bold; color:#808080;">LOGIN</h2>
            <form class="row g-3" asp-action="Login" asp-controller="User" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="@Model.ReturnUrl">
                    <div class="row d-flex justify-content-center">
                        <div class="col-6">
                              <div class="col-12">
                                <label asp-for="@Model.Email" class="form-label"></label>
                                <input asp-for="@Model.Email" class="form-control">
                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="@Model.Senha" class="form-label"></label>
                                <input asp-for="@Model.Senha" type="password" class="form-control">
                                <span asp-validation-for="@Model.Senha" class="text-danger"></span>
                            </div>
                             <div class="d-grid gap-2 mt-4">
                                <button class="btn bt" type="submit">Entrar</button>
                            </div>
                        </div>
                    </div>
             </form>
        </div>
    </div>
</div>