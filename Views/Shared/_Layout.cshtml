<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/img/icone.png " type="image/png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
      <link rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
</head>
<body>
    <header>
         <nav class="navbar navbar-expand-lg  bg-primary-color" id="navbar">
            <div class="container">
            <a asp-action="Index" asp-controller="Home" class="navbar-brand primary-color">
                <img src="~/img/tiacheibranco.png"  alt="TiACheiLogo" width="125" height="50"/>
            </a>
            <button class="navbar-toggler primary-color" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbar-items" aria-controls="navbar-items" aria-expanded="false"
                aria-label="Toggle navigation">
                <i class="bi bi-list"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbar-items">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link primary-color" href="@Url.Action("Index","Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link primary-color" href="#projeto">Projeto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link primary-color" href="#sobre">Sobre Nós</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {   <li class="nav-item">
                            <a class="nav-link primary-color" href="@Url.Action("Index","Painel")">Painel</a>
                        </li>
                    }
                    else
                    {
                          
                    } 
                </ul>
                <ul class="navbar-user me-auto mb-2 mb-lg-0">
                    <li class="nav-user">
                        <div class="dropdown btn-login">
                            <button class="btn btn-success dropdown-toggle bg-color3" type="button" id="dropdownMenuButton1"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i>
                            </button>
                            <ul class="dropdown-menu " aria-labelledby="dropdownMenuButton1">
                                @if(User.Identity.IsAuthenticated)
                                {
                                    <form asp-action="Logout" asp-controller="User" method="POST">
                                        <li>
                                            <input class="dropdown-item" type="submit" value="Logout">
                                        </li>
                                    </form>
                                } 
                                else
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Login","User")">Login</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Cadastrar","User")">Cadastrar</a>
                                    </li>
                                } 
                            </ul>
                        </div>
                    </li>
                </ul>
             </div>
            </div>
        </nav>
    </header>
    
    @RenderBody()

  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.mask.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
