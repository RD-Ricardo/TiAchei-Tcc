@model EnfermidadePessoa
<link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
<div class="container p-4">
    <div class="row vh-100 align-items-center ">
        <partial name="_MensagemPartial"></partial>
        <div class="col-md-12 border rounded shadow">
            <h2 class="text-center mt-5 mb-1" style="font-weight: bold; color:#808080;">ADICIONAR ENFERMIDADE PESSOA</h2>
            <form asp-action="CadastrarEnfermidadePessoa" asp-controller="Painel" method="post">
                <div class="col-12">
                    <label asp-for="@Model.Nome" class="form-label"></label>
                    <input asp-for="@Model.Nome" class="form-control">
                    <span asp-validation-for="@Model.Nome" class="text-danger"></span>
                    <span style="margin-left: 5px;" class="text-secondary">caso não tenha alguma enfermidade coloque no nome (não)</span>
                </div>
                <div class="col-md-12 d-flex justify-content-center mt-5">
                    <button class="bt p-1" type="submit">Adicionar</button>
                </div>
                  <div class="col-md-12 mb-4">
                    <a asp-action="CadastrarPessoa" asp-controller="Painel" class="btn btn-outline-primary">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

