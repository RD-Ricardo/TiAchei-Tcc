@model Pet
@using TiAchei_Tcc.Enums

<link rel="stylesheet" href="~/css/cadastro.css" asp-append-version="true" />

<div class="container d-flex justify-content-center align-items-center tamanho p-5">
    <div class="conteudo">
        <form method="POST" asp-action="Registro" asp-controller="Painel">
            <div class="iso d-flex just" style="width:100%;">
                <div class="content1">
                    <div class="single-input">
                        <input asp-for="@Model.Nome" class="input" required>
                        <label for="Nome">Nome</label>
                    </div>
                    <div class="single-input">
                        <input asp-for="@Model.Raca" class="input" required>
                        <label for="Raca">Ra√ßa</label>
                    </div>
                    <div class="single-input">
                        <select class="select" asp-for="@Model.Tipo" asp-items="Html.GetEnumSelectList<Tipo>()">
                            <option> Selecione</option>
                        </select>
                    </div>
                </div>
                <div class="content2 d-flex justify-content-center align-items-center">
                    <div class="d-flex justify-content-center align-items-center flex-column">
                        <img src="~/img/petimagem.png" alt="" srcset="" width="150" class=" p-1 border rounded-circle pet-img">
                        <button class="mt-3 btn btn-outline-success btn-sm">Upload<i class="bi bi-upload"></i></button>
                    </div>
                 </div>
            </div>
            <div class="content3 mt-4">
                <textarea name="Descricao" id="" cols="30" rows="5" asp-for="@Model.Descricao"></textarea>
            </div>
            <div class="d-grid ">
                <button class="bt" type="submit">Enviar</button>
            </div>
        </form>
    </div>
</div>                