@{
    ViewData["Title"] = "Home Page";
}

<div class="container" style="">
    <div class="row">
        <div class="col-12">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/img/pet.webp" class="d-block w-100" height="500">
                </div>
                <div class="carousel-item">
                    <img src="~/img/pet3.webp" class="d-block w-100" height="500">
                </div>
            </div>
            </div>
        </div>
        <div class="col-12 col-md-10 offset-md-1" id="mini-banners">
            <div class="row">
                <div class="col-12 col-md-4">
                <div class="card text-center">
                    <i class="bi bi-person-bounding-box color3"></i>
                    <div class="card-body">
                    <h5 class="card-title color3">Cadastre-se aqui</h5>
                    <p class="card-text secondary-color">
                        Cadastre-se para ter acesso aos recursos
                    </p>
                      <a class="btn btn-outline-success" href="@Url.Action("Cadastrar","User")">Cadastrar</a>
                    </div>
                </div>
                </div>
                <div class="col-12 col-md-4">
                <div class="card text-center">
                    <i class="bi bi-bullseye color3"></i>
                    <div class="card-body">
                    <h5 class="card-title color3">Equipe Tech Work</h5>
                    <p class="card-text secondary-color">
                        Equipe Empenhada em trazer inovação
                    </p>
                    <a href="#" class="btn btn-outline-success ">Saiba mais</a>
                    </div>
                </div>
                </div>
                <div class="col-12 col-md-4">
                <div class="card text-center">
                    <i class="bi bi-people-fill color3"></i>
                    <div class="card-body">
                    <h5 class="card-title color3">Desenvolvedores</h5>
                    <p class="card-text secondary-color">
                        Conheça os criadores do projeto Ti Achei
                    </p>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-outline-success " data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Saiba Mais
                    </button>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>



 <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Sobre nós</h5>

                    </div>
                    <div class="row row-cols-1 row-cols-md-3 g-4 p-3">
                      <div class="col">
                        <div class="card h-100">
                          <img src="~/img/Ricardo.jfif" class="card-img-top" alt="Ricardo">
                          <div class="card-body">
                            <h5 class="card-title">Ricardo</h5>
                            <p class="card-text">Backend</p>
                          </div>
                          <div class="card-footer">
                            <small class="text-muted">
                              <i class="bi bi-facebook"></i>
                              <i class="bi bi-github"></i>
                              <i class="bi bi-instagram"></i>
                              <i class="bi bi-linkedin"></i>

                            </small>
                          </div>
                        </div>
                      </div>
                      <div class="col">
                        <div class="card h-100">
                          <img src="~/img/nata.jfif" class="card-img-top" alt="Natã">
                          <div class="card-body">
                            <h5 class="card-title">Natã</h5>
                            <p class="card-text">Frontend e Design</p>
                          </div>
                          <div class="card-footer">
                            <small class="text-muted">
                              <i class="bi bi-facebook"></i>
                              <i class="bi bi-github"></i>
                              <i class="bi bi-instagram"></i>
                              <i class="bi bi-linkedin"></i>
                            </small>
                          </div>
                        </div>
                      </div>
                      <div class="col">
                        <div class="card h-100">
                          <img src="~/img/fabiano.jfif" class="card-img-top" alt="Fabiano">
                          <div class="card-body">
                            <h5 class="card-title">Fabiano</h5>
                            <p class="card-text">Frontend e Design</p>

                          </div>
                          <div class="card-footer">
                            <small class="text-muted">
                              <i class="bi bi-facebook"></i>
                              <i class="bi bi-github"></i>
                              <i class="bi bi-instagram"></i>
                              <i class="bi bi-linkedin"></i>

                            </small>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar </button>
                    </div>
                  </div>
                </div>
              </div>